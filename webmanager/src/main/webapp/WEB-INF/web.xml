<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app version="2.5"   
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    
	<display-name>Webmanager</display-name>
	
	<servlet>
        <servlet-name>Webmanager</servlet-name>
        <servlet-class>
         org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
	</servlet>

    <servlet-mapping>
        <servlet-name>Webmanager</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
	
	<servlet-mapping>
	<servlet-name>default</servlet-name>
	<url-pattern>/static/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>form.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/form.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>form.jsp</servlet-name>
	<url-pattern>/form</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>result.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>result.jsp</servlet-name>
	<url-pattern>/result</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>user.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/user.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>user.jsp</servlet-name>
	<url-pattern>/user</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>edit.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/edit.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>edit.jsp</servlet-name>
	<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>formAction</servlet-name>
	<jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>formAction</servlet-name>
	<url-pattern>/formAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>editAction</servlet-name>
	<jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>editAction</servlet-name>
	<url-pattern>/editAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>delete</servlet-name>
	<jsp-file>/WEB-INF/jsp/result.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>delete</servlet-name>
	<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>account.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/account.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>account.jsp</servlet-name>
	<url-pattern>/account</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>signUp</servlet-name>
	<jsp-file>/WEB-INF/jsp/account.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>signUp</servlet-name>
	<url-pattern>/signUp</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>signIn</servlet-name>
	<jsp-file>/WEB-INF/jsp/account.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>signIn</servlet-name>
	<url-pattern>/signIn</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>logout</servlet-name>
	<jsp-file>/WEB-INF/jsp/account.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>logout</servlet-name>
	<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>home.jsp</servlet-name>
	<jsp-file>/WEB-INF/jsp/home.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>home.jsp</servlet-name>
	<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
</web-app>